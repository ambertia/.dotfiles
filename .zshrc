# -------------------------- custom aliases --------------------------
# Change directory and list contents
cl() {
    cd $1 && ls -Al
}
# From the internet - search manpages for a term
fman() {
    man $1 | grep -irn $2 -
}
gits() {
    git status
}
gd() {
    git diff $@
}
# Gitmoji alias
gm() {
    gitmoji commit
}
# Commit alias
gc() {
    git commit $@
}
